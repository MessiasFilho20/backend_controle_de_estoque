generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User { 
  id Int @id @default(autoincrement())
  nome String @db.VarChar(191)
  cpf String  @unique
  role String 
  gmail String @unique 
  password String
}

model Oreder {
  id Int @id @default(autoincrement())
  userName String 
  userCpf String
  itemID Int
  item_descricao String
  item_fornecedor String
  category_description String
  category_name String
  unidade Int
  quantidade Int
  created_at   DateTime @default(now()) @db.Timestamp(0)
  updated_at   DateTime @default(now()) @db.Timestamp(0)
}

model Category {
  id Int @id @default(autoincrement())
  name String
  description String
  metalutgys  Metalurgy[]
}

model Metalurgy {
  id              Int      @id @default(autoincrement())
  categoryID  Int
  quantidade      Int   
  quanti_emerg    Int
  unidade         Int
  img             String   @db.VarChar(191)
  fornecedor      String   @db.VarChar(191)
  descricao       String   
  created_at   DateTime @default(now()) @db.Timestamp(0)
  updated_at   DateTime @default(now()) @db.Timestamp(0)
  category Category @relation(fields: [categoryID], references: [id], onDelete: Cascade)
}